<!-- 자유 게시판 화면 -->
<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>자유 게시판</title>
    <link rel="stylesheet" href="/static/css/board.css" />
  </head>
  <body>
    <h1>자유 게시판</h1>
    <div class="filters">
      <button>전체</button>
      <button>CU</button>
      <button>GS25</button>
      <button>세븐일레븐</button>
      <button>웹</button>
    </div>
    <table>
      <tr>
        <th>분류</th>
        <th>작성일</th>
        <th>아이디</th>
        <th>제목</th>
      </tr>
      <% posts.forEach(post => { %>
      <tr>
        <td><%= post.category %></td>
        <td><%= post.date %></td>
        <td><%= post.userId %></td>
        <td><a href="/board/view/<%= post.id %>"><%= post.title %></a></td>
      </tr>
      <% }) %>
    </table>
    <button onclick="location.href='/board/write'">글 작성</button>
  </body>
</html>
