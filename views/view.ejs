<!-- 글 확인 화면 -->
<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <title>글 확인</title>
    <link rel="stylesheet" href="/static/css/view.css" />
  </head>
  <body>
    <h1>제목: <%= post.title %></h1>
    <p>분류: <%= post.category %></p>
    <p>작성일: <%= post.date %></p>
    <p>내용:<br /><%= post.content %></p>
    <% if (post.file) { %>
    <img src="/uploads/<%= post.file %>" alt="첨부파일" />
    <% } %>

    <!-- 의견 리스트 -->
    <h3>의견 리스트</h3>
    <ul>
      <% comments.forEach(comment => { %>
      <li><strong><%= comment.userId %></strong>: <%= comment.text %></li>
      <% }) %>
    </ul>

    <!-- 의견 작성 -->
    <form action="/board/comment/<%= post.id %>" method="post">
      <textarea name="comment" rows="3" required></textarea>
      <button type="submit">의견 작성</button>
    </form>
  </body>
</html>
